{
	"transform": {
		".(ts|tsx)": "ts-jest",
		".(css)": "jest-transform-stub"
	},
	"moduleNameMapper": {
		".(css)": "jest-transform-stub"
	},
	"testEnvironment": "jsdom",
	"testRegex": "./*\\.test\\.(ts|tsx)$",
	"moduleFileExtensions": ["js", "tsx", "json"],
	"setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"]
}
